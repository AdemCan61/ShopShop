{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Ajouter un produit dans le Panier {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 align-items-center">
                <h1 class="text-center text-primary fw-bold m-2">Ajouter un produit dans le Panier</h1>
                {% for product in products %}        
                    <form action="index.php?page=addPanier" method="post">
                        <input type="hidden" name="idProduct" value="{{ product.idProduct }}">
                        <span style="font-size: 24px; color: black;">{{ product.name }}</span><br>
                        <input type="hidden" name="name" value="{{ product.name }}">
                        <span style="font-size: 24px; color: black;">{{ product.prix }}</span><br>
                        <input type="hidden" name="prix" value="{{ product.prix }}">
                        <div class="text-center">
                            <input type="submit" value="Ajouter dans votre Panier" class="btn btn-primary m-2">
                        </div>
                    </form>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Accueil {% endblock %}
       
{% block content %} 
    <div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="text-center" style="color:#131313;">Avis sur le produit selectionner</h1>
                <ul>
                {% for Commentaire in commentaires %}
                <li style="color:#131313"><span style="font-size : 32px"> {{Commentaire.NameProduct}}</span> <br><br> <span style="font-size : 22px">{{Commentaire.Commentaire}}</span> <br><br> 
                    {% for i in range(1, Commentaire.Etoile) %}
                        <i class="bi bi-star-fill" style="color : #EBF400"></i>
                    {% endfor %}
                {% endfor %}
                </ul>
			</div>
		</div>
	</div>
{% endblock %} 